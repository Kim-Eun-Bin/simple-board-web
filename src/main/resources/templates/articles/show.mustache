{{>layouts/header}}
<div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
  <div class="col-md-6 px-0">
    <h1 class="display-4 fst-italic">Simple Board</h1>
    <hr />
    <p class="lead my-3">view details</p>
  </div>
</div>
<!-- table -->
<div style="margin: 0 20px">
  <table class="table table-hover table-sm">
    <tbody>
      {{#article}}
        <tr>
          <th style="padding: 10px">글번호</th>
          <td style="padding: 10px">{{id}}</td>
        </tr>
        <tr>
          <th style="padding: 10px">제목</th>
          <td style="padding: 10px">{{title}}</td>
        </tr>
        <tr>
          <th style="padding: 10px">내용</th>
          <td style="padding: 10px">{{content}}</td>
        </tr>
      {{/article}}
    </tbody>
  </table>
</div>
<a href="/test/articles" class="btn btn-outline-dark" style="margin: 0 20px"> 목록으로</a>
{{>layouts/footer}}